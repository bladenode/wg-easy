[Unit]
Description=Wireguard Easy Script
Wants=networking.service
After=network-online.target

[Service]
User=root
Group=root
EnvironmentFile=/opt/wg-easy/wg-easy.env
ExecStart=NODE_PATH /opt/wg-easy/server.js
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always

[Install]
WantedBy=multi-user.target